#############
# .XProfile #
#############

#Keyboard layout
setxkbmap br &

# Disable capslock # [caps:escape] map it to Esc
setxkbmap -option caps:none  &

# Keyboard input config [delay/rate]
xset r rate 250 30 &

# --- Tray -------------------------------------------------------------------

# Vomulme
volumeicon &

# Network Manager
nm-applet &

# Pamac tray
pamac-tray &

# --- Apps -------------------------------------------------------------------

# Wallpaper
nitrogen --restore &

# Power Management
xfce4-power-manager &

# Hide Mouse Cursor
unclutter --timeout 2 --ignore-scrolling &

# Gnome Polkit
#/usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &

# LX Polkit
lxsession &

# Night Light [default -t 6500/4500]
sleep 1 && 
redshift -l -23.52:-46.35 -t 6500:4500 &

# Composer
sleep 1 &&
picom --config /dev/null --inactive-dim 0.3 --inactive-opacity 0.9 &
# sleep 1 && picom --config /home/pedro/.config/picom/picom.conf &
