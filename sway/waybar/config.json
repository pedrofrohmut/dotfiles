{
    "layer": "top",
    "modules-left": ["sway/workspaces", "sway/scratchpad", "sway/mode"],
    "modules-center": ["sway/window"],
    "modules-right": [
        "cpu", "memory", "pulseaudio", "clock", "tray"
    ],
    "sway/mode": {
        "format": "<span style=\"italic\">{}</span>"
    },
    "sway/scratchpad": {
        "format": "{icon} {count}",
        "show-empty": false,
        "format-icons": ["", "ï‹’"],
        "tooltip": true,
        "tooltip-format": "{app}: {title}"
    },
    "sway/window": {
        "max-length": 50
    },
    "cpu": {
        "format": "CPU: {usage}%",
        "tooltip": false
    },
    "memory": {
        "format": "RAM: {}%"
    },
    "pulseaudio": {
        "scroll-step": 2.5,
        "format": "Vol: {volume}%",
        "on-click": "sh $HOME/dotfiles/scripts/sway-change-sink.sh"
    },
    "clock": {
        "format-alt": "{:%a, %d. %b  %H:%M}"
    },
    "tray": {
        "icon-size": 18,
        "spacing": 10
    }
}
